{
  "name": "actions-github-pages",
  "version": "3.7.3",
  "description": "GitHub Actions for GitHub Pages",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12.16.3",
    "npm": ">=6.14.4"
  },
  "scripts": {
    "all": "npm run format && npm run lint && npm test",
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "test": "jest --coverage --verbose --detectOpenHandles",
    "build": "ncc build ./src/index.ts -o lib --minify",
    "tsc": "tsc",
    "format": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "release": "standard-version",
    "update-deps": "(git diff 'HEAD@{1}' --name-only | grep 'package-lock.json' > /dev/null) && npm ci || :"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm run update-deps; git remote prune origin"
    }
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --check",
      "eslint"
    ],
    "README.md": [
      "npx doctoc@1.4.0 --github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peaceiris/actions-gh-pages.git"
  },
  "keywords": [
    "GitHub Actions",
    "Actions",
    "JavaScript Action",
    "TypeScript Action",
    "GitHub Pages",
    "gh-pages"
  ],
  "author": "peaceiris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceiris/actions-gh-pages/issues"
  },
  "homepage": "https://github.com/peaceiris/actions-gh-pages#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@actions/io": "^1.0.2",
    "@types/shelljs": "^0.8.8",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "~12",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.5.1",
    "prettier": "2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  }
}
